        {image && (
          <div class="relative">
            <img
              class="w-full h-auto rounded-lg shadow-lg"
              src={image.src}
              alt={image.alt}
              loading="lazy"
            />
          </div>
        )}
      </div>

      <!-- Content -->
      <div class={`${reverse ? 'lg:col-start-1' : ''} space-y-6`}>
        {subtitle && (
          <p class="text-blue-600 dark:text-blue-400 font-semibold text-sm uppercase tracking-wider">
