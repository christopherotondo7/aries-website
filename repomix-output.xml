    tagline="Contact Us"
    title="Let's Discuss Your Project"
    subtitle="Our engineering team is ready to provide custom manufacturing solutions tailored to your specific requirements. Contact us for quotes, technical consultation, and project development."
    actions={[
      {
        variant: 'primary',
        text: 'Request Quote',
        href: '#quote-form',
        icon: 'tabler:file-text',
      },
    ]}
  />

