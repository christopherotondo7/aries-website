        )}
        
        {content && (
          <div class="text-lg text-muted dark:text-slate-400 leading-relaxed">
            <Fragment set:html={content} />
          </div>
        )}
        
        {button && (
          <div class="pt-4">
            <Button 
              variant={button.style || "primary"}
              href={button.href}
              class="inline-flex items-center"
            >
              {button.text}
            </Button>
          </div>
        )}
      </div>
    </div>
  </div>
</section>
