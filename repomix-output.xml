        placeholder: 'your.email@company.com',
        required: true,
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company Name',
        autocomplete: 'organization',
        placeholder: 'Your company',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone Number',
        autocomplete: 'tel',
        placeholder: '+33 1 23 45 67 89',
