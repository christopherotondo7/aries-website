  title?: string;
  subtitle?: string;
  content?: string;
  image?: {
    src: string;
    alt: string;
  };
  button?: {
    text: string;
    href: string;
    style?: string;
  };
  reverse?: boolean;
  highlight?: string;
}

const {
  title,
  subtitle,
  content,
  image,
  button,
  reverse = false,
  highlight,
} = Astro.props;
---

<section class="px-6 py-16 md:py-20">
  <div class="max-w-7xl mx-auto">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${reverse ? 'lg:grid-flow-col-dense' : ''}`}>
      
