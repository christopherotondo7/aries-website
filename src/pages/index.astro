---
import Layout from '~/layouts/PageLayout.astro';
import VideoHero from '~/components/widgets/VideoHero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import FeaturesClickable from '~/components/widgets/FeaturesClickable.astro';
import FeaturesClickableWithImages from '~/components/widgets/FeaturesClickableWithImages.astro';
import Features4 from '~/components/widgets/Features4.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import ProductSlider2 from '~/components/widgets/ProductSlider2.astro';

import robotWelding from '~/assets/images/robot-welding-1.jpg';
import facility from '~/assets/images/WhatsApp Image 2024-03-18 at 12.14.28.jpeg';
import bending from '~/assets/images/bending.jpg';
import assembly1 from '~/assets/images/assembly-1.jpg';
import machining1 from '~/assets/images/machining-1.jpg';
import cutting1 from '~/assets/images/cutting-1.jpg';
import manualWelding from '~/assets/images/manual-welding.jpg';
import heroImage from '~/assets/images/hero-image.png';

const metadata = {
  title: 'Aries - European Manufacturer of High-Precision Metal Components',
  description: 'Precision metal components and assemblies for agriculture, construction, handling, and industrial machines sectors. Custom solutions from prototypes to series production.',
  ignoreTitleTemplate: true,
  openGraph: {
    type: 'website',
    title: 'Aries Manufacturing - Precision Metal Components',
    description: 'Precision metal components and assemblies for agriculture, construction, handling, and industrial machines sectors. Custom solutions from prototypes to series production.',
    url: 'https://astrocms.aries1.fr',
    siteName: 'Aries Group',
    images: [
      {
        url: 'https://astrocms.aries1.fr/images/robot-welding-1.jpg',
        width: 1200,
        height: 630,
        alt: 'Aries manufacturing facility - precision metal components',
        type: 'image/jpeg',
      },
    ],
    locale: 'en_US',
  },
  twitter: {
    cardType: 'summary_large_image',
    title: 'Aries Manufacturing - Precision Metal Components',
    description: 'Precision metal components and assemblies for railway, construction, industrial, and energy sectors.',
    image: 'https://astrocms.aries1.fr/images/robot-welding-1.jpg',
  },
};
---

<Layout metadata={metadata}>
  <!-- Video Hero Section -->
  <VideoHero
    video={{
      src: "/video aries.mp4",
      poster: heroImage
    }}
    image={{
      src: heroImage,
      alt: "Aries manufacturing facility"
    }}
    tagline="European Manufacturing Excellence"
    title="High-Precision Metal Components"
    subtitle="Custom Industrial Solutions - From Laser Cutting to Final Assembly"
    buttons={[
      {
        text: 'Our Services',
        href: '/services',
        style: 'primary',
      },
      {
        text: 'Request Quote',
        href: '/contact',
        style: 'secondary',
      },
    ]}
  />

  <!-- Key Statistics -->
  <Stats
    title="Trusted by Industry Leaders"
    subtitle="65+ years of European manufacturing excellence"
    stats={[
      { amount: '15.000t', title: 'Sheet Metal Processed per year' },
      { amount: '275', title: 'Employees' },
      { amount: '3', title: 'Production Sites' },
      { amount: '30.000m2', title: 'Total production surface' },
    ]}
  />

  <!-- Market Section -->
  <ProductSlider2
    id="markets"
    tagline="Our products"
    title="Wide range of sheet metal products"
    subtitle="Aries Group produces a wide range of products, from simple cut/bent parts to complex welded assemblies, with machining after welding and painting."
    slides={[
      {
        title: 'Telehandler parts',
        description: 'Complete telescopic arm assembly, or sub-component kits for your production line.',
        image: {
          src: bending,
          alt: 'Agriculture equipment components',
        },
        imagePosition: 'right',
        gradient: 'from-green-600 via-emerald-600 to-teal-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/agriculture',
          variant: 'primary',
        },
      },
      {
        title: 'Chassis parts',
        description: 'Complete chassis or sub-component for your chassis line.',
        image: {
          src: assembly1,
          alt: 'Building and construction components',
        },
        imagePosition: 'left',
        gradient: 'from-slate-600 via-gray-600 to-zinc-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/construction',
          variant: 'primary',
        },
      },
      {
        title: 'small to medium serial welded components',
        description: 'Large welded components manufactured in series, small to medium size parts, with cataphoresis or painting finish, that we can manage in kaban for high-volumes production lines.',
        image: {
          src: machining1,
          alt: 'Industrial machinery components',
        },
        imagePosition: 'right',
        gradient: 'from-blue-600 via-indigo-600 to-purple-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/machinery',
          variant: 'primary',
        },
      },
      {
        title: 'Thin sheet metal assemblies and body machine parts',
        description: 'Thin sheet metal assemblies and body machine parts for industrial equipment, with precise fabrication and finishing, using carbon steel, aluminum or stainless steel. Those parts can be low-volume and high-mix.',
        image: {
          src: cutting1,
          alt: 'Recycling and environmental components',
        },
        imagePosition: 'left',
        gradient: 'from-emerald-600 via-green-600 to-lime-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/recycling',
          variant: 'primary',
        },
      },
      {
        title: 'Cut/bent part for your welding line',
        description: 'Cut and bent sheet metal parts, ready for seamless integration into your production process, with possibility of kitting delivery for your production line.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        imagePosition: 'right',
        gradient: 'from-orange-600 via-red-600 to-pink-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/logistics',
          variant: 'primary',
        },
      },
      {
        title: 'Complex assemblies',
        description: 'Complex assemblies for outdoor furniture or complete machines, produced 100% internally, up to the assembly of hydraulic or electrical components, with painting and surface treatment.',
        image: {
          src: manualWelding,
          alt: 'Outdoor furniture components',
        },
        imagePosition: 'left',
        gradient: 'from-violet-600 via-purple-600 to-fuchsia-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/furniture',
          variant: 'primary',
        },
      },
    ]}
  />

  <!-- Services Overview -->
  <FeaturesClickableWithImages
    id="services"
    tagline="Our Capabilities"
    title="Complete Manufacturing Solutions"
    subtitle="From raw materials to finished assemblies, we deliver precision engineering across the full production cycle"
    columns={2}
    items={[
      {
        title: 'Material Expertise',
        description: 'With over 4 tons of available materials all year, Aries Group has the capacity to meet your request for carbon steel, stainless steel, aluminum alloys, and specialty alloys, from 0.5mm to 150mm.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/cutting',
      },
      {
        title: 'Engineering & Production Tooling',
        description: 'Industrialization design, jig/tooling design, prototyping services and consulting services for sheet metal projects.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/cutting',
      },
      {
        title: 'High-Precision Cutting',
        description: 'Fiber laser cutting up to 30mm steel thickness with automated systems and XXL Oxy/Plasma cutting tables for maximum efficiency.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/cutting',
      },
      {
        title: 'Cutting Finition',
        description: 'Precision deburring, edge rounding, flatening and sandblasting for all laser/oxy/plasma cut parts, ensuring optimal quality and safety.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/cutting-finition',
      },
      {
        title: 'Bending & Forming',
        description: 'Advanced CNC bending machines for complex shapes and high precision forming operations.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/bending',
      },
      {
        title: 'Multi-Axis CNC Machining',
        description: 'Advanced 5-axis machining centers for complex geometries, turning, milling, drilling and tapping operations.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/machining',
      },
      {
        title: 'Manual & Robotic Welding',
        description: 'Expert welding services including TIG, MIG/MAG, electrode welding and robotic welding for series production.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/welding',
      },
      {
        title: 'Painting & Surface Treatment',
        description: 'Complete mechanical assembly, surface treatment, industrial painting and logistics solutions.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/painting',
      },
      {
        title: 'Assembly',
        description: 'Complete mechanical assembly, including sub-assemblies, electro-mechanical and hydraulic assemblies as well as final assembly and quality control.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/assembly',
      },
      {
        title: 'Logistics',
        description: 'Logistics solutions, including packaging, kanban systems inventory management, and transportation rack design.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        href: '/services/logistics',
      },
    ]}
  />

  <!-- Market Section -->
  <ProductSlider2
    id="markets"
    tagline="End-Markets"
    title="Serving Diverse Industries"
    subtitle="Aries Group delivers tailored sheet metal solutions across Europe for various industries."
    slides={[
      {
        title: 'Agriculture Equipment',
        description: 'Durable components for agricultural machinery, implements and equipment designed for harsh environments.',
        image: {
          src: bending,
          alt: 'Agriculture equipment components',
        },
        imagePosition: 'right',
        gradient: 'from-green-600 via-emerald-600 to-teal-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/agriculture',
          variant: 'primary',
        },
      },
      {
        title: 'Building & Construction',
        description: 'Metal structures, prefabricated elements, railings, staircases and architectural metalwork for construction projects.',
        image: {
          src: assembly1,
          alt: 'Building and construction components',
        },
        imagePosition: 'left',
        gradient: 'from-slate-600 via-gray-600 to-zinc-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/construction',
          variant: 'primary',
        },
      },
      {
        title: 'Industrial Machinery',
        description: 'Custom machinery components, equipment manufacturing, spare parts and small to medium production series.',
        image: {
          src: machining1,
          alt: 'Industrial machinery components',
        },
        imagePosition: 'right',
        gradient: 'from-blue-600 via-indigo-600 to-purple-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/machinery',
          variant: 'primary',
        },
      },
      {
        title: 'Recycling & Environment',
        description: 'Recycling equipment, waste management solutions and environmental technology components.',
        image: {
          src: cutting1,
          alt: 'Recycling and environmental components',
        },
        imagePosition: 'left',
        gradient: 'from-emerald-600 via-green-600 to-lime-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/recycling',
          variant: 'primary',
        },
      },
      {
        title: 'Logistics & Material Handling',
        description: 'Precision components for material handling, storage systems, conveyor systems and logistics solutions.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        imagePosition: 'right',
        gradient: 'from-orange-600 via-red-600 to-pink-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/logistics',
          variant: 'primary',
        },
      },
      {
        title: 'Outdoor Furniture',
        description: 'High-quality metal furniture for public spaces, parks and outdoor environments, combining durability and design.',
        image: {
          src: manualWelding,
          alt: 'Outdoor furniture components',
        },
        imagePosition: 'left',
        gradient: 'from-violet-600 via-purple-600 to-fuchsia-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/furniture',
          variant: 'primary',
        },
      },
    ]}
  />

  <!-- Features Section -->
  <Features4
    id="features"
    columns={3}
    tagline="Our Production Sites"
    title="Your European Sheet Metal Partner"
    subtitle="With 3 sites across Europe, Aries Group has a central position to be your efficient partner in sheet metal activities."
    items={[
      {
        title: 'Aries3-Guret Métallurgie (France 🇫🇷)',
        description: 'Located in Brignais, France, near Lyon, this site specializes in small/mid thickness sheet metal fabrication for both high-volume and custom, low-volume projects. This site is equiped with all the technologies to meet your demand: fiber laser cutting, bending, welding, painting and assembly capabilities.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
      },
      {
        title: 'Aries2 (Slovakia 🇸🇰)',
        description: 'Located in Tornala, Slovakia, Aries2 is the main Aries site for mid/heavy sheet metal components and assemblies, delivering high-volume production for major industrial customers, with a specialization in welding, robot welding, CNC machining (up to 10m and 5 tons), painting (both liquid and powder coating) and assembly.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
      },
      {
        title: 'Aries4-Raciostyl (Slovakia 🇸🇰)',
        description: 'Located in Drienovec, Slovakia, this site specializes in high-precision cutting operations (fiber laser and oxy/plasma), cutting post-processing and bending operations, with a focus on medium to high series production. It is specialized in kitting preparation for welding lines, delivering all the cut/bent parts ready for welding.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
      }
    ]}
  />

  <!-- CTA Button for Production Sites Page -->
  <div class="text-center mt-8 mb-16">
    <a href="/production-sites" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition duration-150 ease-in-out">
      Discover our Production Sites
      <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <!-- Certifications -->
  <Features
    isDark={true}
    id="certifications"
    tagline="Quality Assurance"
    title="Certified Excellence"
    subtitle="International certifications and quality standards ensuring reliability and performance"
    items={[
      {
        title: 'ISO 9001:2015',
        description: 'Quality management system certification for consistent, high-quality manufacturing processes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'ISO 14001:2015',
        description: 'Environmental management certification demonstrating our commitment to sustainable operations.',
        icon: 'tabler:leaf',
      },
      {
        title: 'ISO 3834-2',
        description: 'Welding quality certification ensuring the highest standards in all welding operations.',
        icon: 'tabler:flame',
      },
      {
        title: 'ECOVADIS Bronze',
        description: 'CSR performance recognition for environmental, social and ethical business practices.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Ready to Start Your Project?"
    subtitle="Contact our engineering team for custom solutions tailored to your specifications"
    actions={[
      {
        variant: 'primary',
        text: 'Request Quote',
        href: '/contact',
        icon: 'tabler:file-text',
      },
      {
        variant: 'secondary',
        text: 'View Capabilities',
        href: '/services',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>