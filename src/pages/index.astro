---
import Layout from '~/layouts/PageLayout.astro';
import VideoHero from '~/components/widgets/VideoHero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import FeaturesClickable from '~/components/widgets/FeaturesClickable.astro';
import Features4 from '~/components/widgets/Features4.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import ProductSlider2 from '~/components/widgets/ProductSlider2.astro';

import robotWelding from '~/assets/images/robot-welding-1.jpg';
import facility from '~/assets/images/WhatsApp Image 2024-03-18 at 12.14.28.jpeg';
import bending from '~/assets/images/bending.jpg';
import assembly1 from '~/assets/images/assembly-1.jpg';
import machining1 from '~/assets/images/machining-1.jpg';
import cutting1 from '~/assets/images/cutting-1.jpg';
import manualWelding from '~/assets/images/manual-welding.jpg';
import heroImage from '~/assets/images/hero-image.png';

const metadata = {
  title: 'Aries - European Manufacturer of High-Precision Metal Components',
  description: 'Precision metal components and assemblies for agriculture, construction, handling, and industrial machines sectors. Custom solutions from prototypes to series production.',
  ignoreTitleTemplate: true,
  openGraph: {
    type: 'website',
    title: 'Aries Manufacturing - Precision Metal Components',
    description: 'Precision metal components and assemblies for agriculture, construction, handling, and industrial machines sectors. Custom solutions from prototypes to series production.',
    url: 'https://astrocms.aries1.fr',
    siteName: 'Aries Group',
    images: [
      {
        url: 'https://astrocms.aries1.fr/images/robot-welding-1.jpg',
        width: 1200,
        height: 630,
        alt: 'Aries manufacturing facility - precision metal components',
        type: 'image/jpeg',
      },
    ],
    locale: 'en_US',
  },
  twitter: {
    cardType: 'summary_large_image',
    title: 'Aries Manufacturing - Precision Metal Components',
    description: 'Precision metal components and assemblies for railway, construction, industrial, and energy sectors.',
    image: 'https://astrocms.aries1.fr/images/robot-welding-1.jpg',
  },
};
---

<Layout metadata={metadata}>
  <!-- Video Hero Section -->
  <VideoHero
    video={{
      src: "/video aries.mp4",
      poster: heroImage
    }}
    image={{
      src: heroImage,
      alt: "Aries manufacturing facility"
    }}
    tagline="European Manufacturing Excellence"
    title="High-Precision Metal Components"
    subtitle="Custom Industrial Solutions - From Laser Cutting to Final Assembly"
    buttons={[
      {
        text: 'Our Services',
        href: '/services',
        style: 'primary',
      },
      {
        text: 'Request Quote',
        href: '/contact',
        style: 'secondary',
      },
    ]}
  />

  <!-- Key Statistics -->
  <Stats
    title="Trusted by Industry Leaders"
    subtitle="65+ years of European manufacturing excellence"
    stats={[
      { amount: '15.000t', title: 'Sheet Metal Processed per year' },
      { amount: '275', title: 'Employees' },
      { amount: '3', title: 'Production Sites' },
      { amount: '30.000m2', title: 'Total production surface' },
    ]}
  />

  <!-- Market Section -->
  <ProductSlider2
    id="markets"
    tagline="End-Markets"
    title="Serving Diverse Industries"
    subtitle="Aries Group delivers tailored sheet metal solutions across Europe for various industries."
    slides={[
      {
        title: 'Agriculture Equipment',
        description: 'Durable components for agricultural machinery, implements and equipment designed for harsh environments.',
        image: {
          src: bending,
          alt: 'Agriculture equipment components',
        },
        imagePosition: 'right',
        gradient: 'from-green-600 via-emerald-600 to-teal-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/agriculture',
          variant: 'primary',
        },
      },
      {
        title: 'Building & Construction',
        description: 'Metal structures, prefabricated elements, railings, staircases and architectural metalwork for construction projects.',
        image: {
          src: assembly1,
          alt: 'Building and construction components',
        },
        imagePosition: 'left',
        gradient: 'from-slate-600 via-gray-600 to-zinc-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/construction',
          variant: 'primary',
        },
      },
      {
        title: 'Industrial Machinery',
        description: 'Custom machinery components, equipment manufacturing, spare parts and small to medium production series.',
        image: {
          src: machining1,
          alt: 'Industrial machinery components',
        },
        imagePosition: 'right',
        gradient: 'from-blue-600 via-indigo-600 to-purple-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/machinery',
          variant: 'primary',
        },
      },
      {
        title: 'Recycling & Environment',
        description: 'Recycling equipment, waste management solutions and environmental technology components.',
        image: {
          src: cutting1,
          alt: 'Recycling and environmental components',
        },
        imagePosition: 'left',
        gradient: 'from-emerald-600 via-green-600 to-lime-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/recycling',
          variant: 'primary',
        },
      },
      {
        title: 'Logistics & Material Handling',
        description: 'Precision components for material handling, storage systems, conveyor systems and logistics solutions.',
        image: {
          src: robotWelding,
          alt: 'Logistics and material handling components',
        },
        imagePosition: 'right',
        gradient: 'from-orange-600 via-red-600 to-pink-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/logistics',
          variant: 'primary',
        },
      },
      {
        title: 'Outdoor Furniture',
        description: 'High-quality metal furniture for public spaces, parks and outdoor environments, combining durability and design.',
        image: {
          src: manualWelding,
          alt: 'Outdoor furniture components',
        },
        imagePosition: 'left',
        gradient: 'from-violet-600 via-purple-600 to-fuchsia-700',
        button: {
          text: 'Discover our Portfolio',
          href: '/products/furniture',
          variant: 'primary',
        },
      },
    ]}
  />

  <!-- Services Overview -->
  <FeaturesClickable
    id="services"
    tagline="Our Capabilities"
    title="Complete Manufacturing Solutions"
    subtitle="From raw materials to finished assemblies, we deliver precision engineering across the full production cycle"
    items={[
      {
        title: 'High-Precision Cutting',
        description: 'Fiber laser cutting up to 30mm steel thickness with automated systems and XXL Oxy/Plasma cutting tables for maximum efficiency.',
        icon: 'tabler:circle-dashed',
        href: '/services/cutting',
      },
      {
        title: 'Cutting Finition',
        description: 'Precision deburring, edge rounding, flatening and sandblasting for all laser/oxy/plasma cut parts, ensuring optimal quality and safety.',
        icon: 'tabler:sparkles',
        href: '/services/cutting-finition',
      },
      {
        title: 'Bending & Forming',
        description: 'Advanced CNC bending machines for complex shapes and high precision forming operations.',
        icon: 'tabler:border-corner-pill',
        href: '/services/bending',
      },
      {
        title: 'Multi-Axis CNC Machining',
        description: 'Advanced 5-axis machining centers for complex geometries, turning, milling, drilling and tapping operations.',
        icon: 'tabler:arrows-maximize',
        href: '/services/machining',
      },
      {
        title: 'Manual & Robotic Welding',
        description: 'Expert welding services including TIG, MIG/MAG, electrode welding and robotic welding for series production.',
        icon: 'tabler:bolt',
        href: '/services/welding',
      },
      {
        title: 'Painting & Surface Treatment',
        description: 'Complete mechanical assembly, surface treatment, industrial painting and logistics solutions.',
        icon: 'tabler:brush',
        href: '/services/painting',
      },
      {
        title: 'Assembly',
        description: 'Complete mechanical assembly, including sub-assemblies, electro-mechanical and hydraulic assemblies as well as final assembly and quality control.',
        icon: 'tabler:tool',
        href: '/services/assembly',
      },
      {
        title: 'Logistics',
        description: 'Logistics solutions, including packaging, kanban systems inventory management, and transportation rack design.',
        icon: 'tabler:package',
        href: '/services/logistics',
      },
    ]}
  />

