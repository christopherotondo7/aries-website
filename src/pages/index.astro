  <!-- CTA Button for Production Sites Page -->
  <div class="text-center mt-8 mb-16">
    <a href="/production-sites" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition duration-150 ease-in-out">
      Discover our Production Sites
      <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <!-- Certifications -->
  <Features
    isDark={true}
    id="certifications"
    tagline="Quality Assurance"
    title="Certified Excellence"
    subtitle="International certifications and quality standards ensuring reliability and performance"
    items={[
      {
        title: 'ISO 9001:2015',
        description: 'Quality management system certification for consistent, high-quality manufacturing processes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'ISO 14001:2015',
        description: 'Environmental management certification demonstrating our commitment to sustainable operations.',
        icon: 'tabler:leaf',
      },
      {
        title: 'ISO 3834-2',
        description: 'Welding quality certification ensuring the highest standards in all welding operations.',
        icon: 'tabler:flame',
      },
      {
        title: 'ECOVADIS Bronze',
        description: 'CSR performance recognition for environmental, social and ethical business practices.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Ready to Start Your Project?"
    subtitle="Contact our engineering team for custom solutions tailored to your specifications"
    actions={[
      {
        variant: 'primary',
        text: 'Request Quote',
        href: '/contact',
        icon: 'tabler:file-text',
      },
      {
        variant: 'secondary',
        text: 'View Capabilities',
        href: '/services',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>