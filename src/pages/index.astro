---
import Layout from '~/layouts/PageLayout.astro';
import VideoHero from '~/components/widgets/VideoHero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import CardGrid from '~/components/widgets/CardGrid.astro';

import robotWelding from '~/assets/images/robot-welding-1.jpg';
import facility from '~/assets/images/WhatsApp Image 2024-03-18 at 12.14.28.jpeg';
import Announcement from '~/components/widgets/Announcement.astro';

const metadata = {
  title: 'Aries - European Manufacturer of High-Precision Metal Components',
  description: 'Custom industrial solutions from laser cutting to final assembly. 65+ years of expertise, â‚¬42M turnover, 275 employees across France and Slovakia.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Video Hero Section -->
  <VideoHero
    video={{
      src: "/video aries.mp4",
      poster: "/images/hero-image.png"
    }}
    image={{
      src: "/images/hero-image.png",
      alt: "Aries manufacturing facility"
    }}
    tagline="European Manufacturing Excellence"
    title="High-Precision Metal Components"
    subtitle="Custom Industrial Solutions - From Laser Cutting to Final Assembly"
    buttons={[
      {
        text: 'Our Services',
        href: '/services',
        style: 'primary',
      },
      {
        text: 'Request Quote',
        href: '/contact',
        style: 'secondary',
      },
    ]}
  />

  <!-- Key Statistics -->
  <Stats
    title="Trusted by Industry Leaders"
    subtitle="65+ years of European manufacturing excellence"
    stats={[
      { amount: '15.000t', title: 'Sheet Metal Processed per year' },
      { amount: '275', title: 'Employees' },
      { amount: '3', title: 'Production Sites' },
      { amount: '30.000m2', title: 'Total production surface' },
    ]}
  />

  <!-- Products Section -->
  <CardGrid
    id="products"
    tagline="Products & Markets"
    title="Serving Diverse Industries"
    subtitle="Aries Group delivers tailored sheet metal solutions across Europe for various industries."
    columns={3}
    items={[
      {
        title: 'Agriculture Equipment',
        description: 'Durable components for agricultural machinery, implements and equipment designed for harsh environments.',
        image: '/images/bending.jpg',
        callToAction: {
          text: 'Learn More',
          href: '/industries/railway',
        },
        tags: ['Certified', 'EN 15085-2'],
        isHighlighted: true,
      },
      {
        title: 'Building & Construction',
        description: 'Metal structures, prefabricated elements, railings, staircases and architectural metalwork for construction projects.',
        image: '/images/assembly-1.jpg',
        callToAction: {
          text: 'Learn More',
          href: '/industries/construction',
        },
        tags: ['Structures', 'Architecture'],
      },
      {
        title: 'Industrial Machinery',
        description: 'Custom machinery components, equipment manufacturing, spare parts and small to medium production series.',
        image: '/images/machining-1.jpg',
        callToAction: {
          text: 'Learn More',
          href: '/industries/machinery',
        },
        tags: ['Custom', 'Series Production'],
      },
      {
        title: 'Recycling & Environment',
        description: 'Recycling equipment, waste management solutions and environmental technology components.',
        image: '/images/cutting-1.jpg',
        callToAction: {
          text: 'Learn More',
          href: '/industries/energy',
        },
        tags: ['Renewable', 'Sustainable'],
      },
      {
        title: 'Logistics & Material Handling',
        description: 'Precision components for material handling, storage systems, conveyor systems and logistics solutions.',
        image: '/images/robot-welding-1.jpg',
        callToAction: {
          text: 'Learn More',
          href: '/industries/automotive',
        },
        tags: ['Precision', 'OEM'],
      },
      {
        title: 'Outdoor furniture',
        description: 'High-quality metal furniture for public spaces, parks and outdoor environments, combining durability and design.',
        image: '/images/manual-welding.jpg',
        callToAction: {
          text: 'Learn More',
          href: '/industries/agriculture',
        },
        tags: ['Durable', 'Heavy-Duty'],
      },
    ]}
  />

  <!-- Services Overview -->
  <Features
    id="services"
    tagline="Our Capabilities"
    title="Complete Manufacturing Solutions"
    subtitle="From raw materials to finished assemblies, we deliver precision engineering across the full production cycle"
    items={[
      {
        title: 'High-Precision Cutting',
        description: 'Fiber laser cutting up to 30mm steel thickness with automated systems and XXL Oxy/Plasma cutting tables for maximum efficiency.',
        icon: 'tabler:circle-dashed',
      },
      {
        title: 'Cutting Finition',
        description: 'Precision deburring, edge rounding, flatening and sandblasting for all laser/oxy/plasma cut parts, ensuring optimal quality and safety.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Bending & Forming',
        description: 'Advanced CNC bending machines for complex shapes and high precision forming operations.',
        icon: 'tabler:border-corner-pill',
      },
      {
        title: 'Multi-Axis CNC Machining',
        description: 'Advanced 5-axis machining centers for complex geometries, turning, milling, drilling and tapping operations.',
        icon: 'tabler:arrows-maximize',
      },
      {
        title: 'Manual & Robotic Welding',
        description: 'Expert welding services including TIG, MIG/MAG, electrode welding and robotic welding for series production.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Painting & Surface Treatment',
        description: 'Complete mechanical assembly, surface treatment, industrial painting and logistics solutions.',
        icon: 'tabler:brush',
      },
      {
        title: 'Assembly',
        description: 'Complete mechanical assembly, including sub-assemblies, electro-mechanical and hydraulic assemblies as well as final assembly and quality control.',
        icon: 'tabler:tool',
      },
      {
        title: 'Logistics',
        description: 'Logistics solutions, including packaging, kanban systems inventory management, and transportation rack design.',
        icon: 'tabler:package',
      },
    ]}
  />
  
  <!-- CTA Button for Technology Page -->
  <div class="text-center mt-8 mb-16">
    <a href="/technology" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition duration-150 ease-in-out">
      Discover our Technologies
      <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <!-- Technology Highlight -->
  <Content
    tagline="Industry 4.0"
    title="Advanced Manufacturing Technology"
    subtitle="State-of-the-art equipment and digital integration for superior quality and efficiency"
    items={[
      {
        title: 'Automated Production',
        description: 'Fully automated laser cutting systems with material handling and nesting optimization.',
      },
      {
        title: 'Digital Traceability',
        description: 'Complete process tracking from material receipt to final delivery with quality documentation.',
      },
      {
        title: 'Collaborative Robotics',
        description: 'Advanced welding robots working alongside skilled craftsmen for optimal results.',
      },
      {
        title: 'Smart Manufacturing',
        description: 'Integrated CAD/CAM systems, real-time monitoring and predictive maintenance.',
      },
    ]}
    image={{
      src: robotWelding,
      alt: 'Robotic welding system',
    }}
  />

  <!-- Company Values -->
  <Content
    tagline="Our Values"
    title="Partnership. Innovation. Excellence."
    subtitle="Built on family values since 1956, we combine traditional craftsmanship with cutting-edge technology"
    isReversed
    items={[
      {
        title: 'Innovation',
        description: 'Industry 4.0 integration, digital processes, and continuous investment in advanced technologies.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Quality',
        description: 'ISO 9001, 14001, 3834-2 certifications ensuring the highest standards in every project.',
        icon: 'tabler:augmented-reality',
      },
      {
        title: 'Sustainability',
        description: 'ECOVADIS Bronze Medal recognizing our commitment to environmental and social responsibility.',
        icon: 'tabler:michelin-star-green',
      },
      {
        title: 'Partnership',
        description: 'Long-term relationships built on trust, reliability and shared success with our clients.',
        icon: 'tabler:heart-handshake',
      },
    ]}
    image={{
      src: facility,
      alt: 'Aries manufacturing facility',
    }}
  />

  <!-- CTA Button for Production Sites Page -->
  <div class="text-center mt-8 mb-16">
    <a href="/production-sites" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition duration-150 ease-in-out">
      Discover our Production Sites
      <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <!-- Certifications -->
  <Features
    id="certifications"
    tagline="Quality Assurance"
    title="Certified Excellence"
    subtitle="International certifications and quality standards ensuring reliability and performance"
    items={[
      {
        title: 'ISO 9001:2015',
        description: 'Quality management system certification for consistent, high-quality manufacturing processes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'ISO 14001:2015',
        description: 'Environmental management certification demonstrating our commitment to sustainable operations.',
        icon: 'tabler:leaf',
      },
      {
        title: 'ISO 3834-2',
        description: 'Welding quality certification ensuring the highest standards in all welding operations.',
        icon: 'tabler:flame',
      },
      {
        title: 'ECOVADIS Bronze',
        description: 'CSR performance recognition for environmental, social and ethical business practices.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Ready to Start Your Project?"
    subtitle="Contact our engineering team for custom solutions tailored to your specifications"
    actions={[
      {
        variant: 'primary',
        text: 'Request Quote',
        href: '/contact',
        icon: 'tabler:file-text',
      },
      {
        variant: 'secondary',
        text: 'View Capabilities',
        href: '/services',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>