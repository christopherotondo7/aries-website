---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import { readFileSync } from 'fs';
import { join } from 'path';

// Read content from CMS files
let productsContent;
try {
  const productsPath = join(process.cwd(), 'src/content/products.md');
  const productsRaw = readFileSync(productsPath, 'utf-8');
  const frontmatter = productsRaw.split('---')[1];
  const body = productsRaw.split('---')[2];
  
  const title = frontmatter.match(/title:\s*"([^"]+)"/)?.[1] || 'Our Products';
  const description = frontmatter.match(/description:\s*"([^"]+)"/)?.[1] || '';
  
  productsContent = { title, description, body };
} catch (error) {
  productsContent = {
    title: 'Our Products',
    description: 'Comprehensive range of sheet metal processing solutions',
    body: 'Explore our product offerings...'
  };
}

const metadata = {
  title: `${productsContent.title} - Aries Group`,
  description: productsContent.description,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero>
    <Fragment slot="title">
      {productsContent.title}
    </Fragment>
    <Fragment slot="subtitle">
      {productsContent.description}
    </Fragment>
  </Hero>

  <!-- Content Section -->
  <div class="max-w-6xl mx-auto px-4 py-16">
    <div class="prose prose-lg mx-auto dark:prose-invert mb-16">
      <Fragment set:html={productsContent.body} />
    </div>
  </div>

  <!-- Product Categories -->
  <Features
    id="products"
    title="Product Categories"
    subtitle="Precision engineered solutions for diverse industrial applications"
    items={[
      {
        title: 'Precision Cut Parts',
        description: 'High-accuracy laser cutting and punching services for complex geometries and tight tolerances.',
        icon: 'tabler:cut',
      },
      {
        title: 'Formed Components',
        description: 'Advanced bending and forming capabilities for complex three-dimensional parts.',
        icon: 'tabler:fold',
      },
      {
        title: 'Welded Assemblies',
        description: 'Professional welding and assembly services with certified quality standards.',
        icon: 'tabler:flame',
      },
      {
        title: 'Finished Products',
        description: 'Complete manufacturing solutions from design conception to final delivery.',
        icon: 'tabler:package',
      },
      {
        title: 'Custom Solutions',
        description: 'Tailored manufacturing processes designed to meet specific customer requirements.',
        icon: 'tabler:settings',
      },
      {
        title: 'Quality Assurance',
        description: 'Comprehensive testing and inspection to ensure the highest quality standards.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Industries Served -->
  <div class="bg-gray-50 dark:bg-slate-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Industries We Serve
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
          Delivering precision solutions across multiple sectors
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Automotive</h3>
          <p class="text-gray-600 dark:text-gray-300">Precision components for automotive manufacturing</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Aerospace</h3>
          <p class="text-gray-600 dark:text-gray-300">High-precision parts for aerospace applications</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Industrial Equipment</h3>
          <p class="text-gray-600 dark:text-gray-300">Components for industrial machinery and equipment</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Construction</h3>
          <p class="text-gray-600 dark:text-gray-300">Structural components and building materials</p>
        </div>
      </div>
    </div>
  </div>
</Layout>