        category: 'logistics',
      },
      
      // Outdoor Furniture
      {
        image: '/images/manual-welding.jpg',
        title: 'Park Benches',
        subtitle: 'Weather-resistant public seating',
        category: 'furniture',
      },
      {
        image: '/images/painting-2.jpg',
        title: 'Street Furniture',
        subtitle: 'Urban design elements',
        category: 'furniture',
      },
      {
        image: '/images/engineering-1.jpg',
        title: 'Playground Equipment',
        subtitle: 'Safety-certified components',
        category: 'furniture',
