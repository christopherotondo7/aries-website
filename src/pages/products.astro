    tagline="Our Products"
    title="Product Portfolio by Market Sector"
    subtitle="Explore our comprehensive range of precision metal components across diverse industry applications"
    columns={3}
    categories={[
      { label: 'All', value: 'all' },
      { label: 'Agriculture', value: 'agriculture' },
      { label: 'Construction', value: 'construction' },
      { label: 'Industrial', value: 'industrial' },
      { label: 'Environment', value: 'environment' },
      { label: 'Logistics', value: 'logistics' },
      { label: 'Furniture', value: 'furniture' },
    ]}
    items={[
      // Agriculture Equipment
      {
        image: '/images/bending.jpg',
        title: 'Tractor Components',
        subtitle: 'Heavy-duty brackets and frames',
        category: 'agriculture',
      },
      {
        image: '/images/cutting-1.jpg',
        title: 'Harvester Parts',
        subtitle: 'Precision-cut components',
        category: 'agriculture',
      },
      {
        image: '/images/assembly-1.jpg',
        title: 'Implement Frames',
        subtitle: 'Robust welded structures',
        category: 'agriculture',
      },
      {
        image: '/images/WhatsApp Image 2024-06-04 at 09.56.05.jpeg',
