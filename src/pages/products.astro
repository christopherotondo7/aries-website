  <!-- Product Categories -->
  <Features
    tagline="Product Categories"
    title="Comprehensive Component Range"
    subtitle="Complete spectrum of metal components from simple brackets to complex assemblies"
    items={[
      {
        title: 'Precision Cut Parts',
        description: 'Laser-cut components with superior edge quality and dimensional accuracy up to 30mm thickness.',
        icon: 'tabler:cut',
      },
      {
        title: 'Machined Components',
        description: 'CNC machined parts with tight tolerances and complex geometries using advanced 5-axis systems.',
        icon: 'tabler:tool',
      },
      {
        title: 'Welded Assemblies',
        description: 'Professional welded structures and assemblies with ISO 3834-2 certified quality standards.',
        icon: 'tabler:flame',
      },
      {
        title: 'Finished Products',
        description: 'Complete assemblies with surface treatment, painting, and final inspection ready for installation.',
        icon: 'tabler:package',
      },
    ]}
  />

  <!-- Manufacturing Capabilities -->
  <Content
    tagline="Manufacturing Range"
    title="From Prototypes to Series Production"
    subtitle="Flexible manufacturing capabilities accommodating diverse volume requirements"
    items={[
      {
        title: 'Prototype Development',
        description: 'Rapid prototyping services for design validation and testing with quick turnaround times.',
      },
      {
        title: 'Small Series Production',
        description: 'Efficient production of small to medium quantities with competitive pricing and flexibility.',
      },
      {
        title: 'High Volume Manufacturing',
        description: 'Automated production systems for large volume requirements with consistent quality and cost optimization.',
      },
      {
        title: 'Custom Engineering',
        description: 'Design collaboration and engineering support for optimal manufacturability and cost effectiveness.',
      },
    ]}
  />

  <!-- Material Expertise -->
  <Features2
    tagline="Material Expertise"
    title="Advanced Material Processing"
    subtitle="Comprehensive capabilities across diverse material types and specifications"
    items={[
      {
        title: 'Carbon Steel',
        description: 'Standard and high-strength carbon steels for structural and general engineering applications.',
        icon: 'tabler:building-bridge',
      },
      {
        title: 'Stainless Steel',
        description: 'All grades of stainless steel including austenitic, ferritic, and duplex grades for demanding environments.',
        icon: 'tabler:shield',
      },
      {
        title: 'Aluminum Alloys',
        description: 'Lightweight aluminum alloys for aerospace, automotive, and architectural applications.',
        icon: 'tabler:plane',
      },
      {
        title: 'Specialty Alloys',
        description: 'Exotic materials including Inconel, Hastelloy, and other high-performance alloys for extreme conditions.',
        icon: 'tabler:atom',
      },
    ]}
  />

  <!-- Quality & Certifications -->
  <Content
    tagline="Quality Assurance"
    title="Certified Manufacturing Standards"
    subtitle="Comprehensive quality systems ensuring consistent excellence across all products"
    isReversed
    items={[
      {
        title: 'ISO Certifications',
        description: 'ISO 9001:2015 quality management and ISO 3834-2 welding certification ensuring consistent processes.',
      },
      {
        title: 'Material Traceability',
        description: 'Complete material certification and traceability from raw material to finished component delivery.',
      },
      {
        title: 'Inspection & Testing',
        description: 'Comprehensive dimensional inspection, NDT testing, and quality documentation for all products.',
      },
      {
        title: 'Customer Specifications',
        description: 'Adherence to customer-specific quality requirements and industry standards across all sectors.',
      },
    ]}
    image={{
      src: assembly,
      alt: 'Quality assurance systems',
    }}
  />

  <!-- Design Support -->
  <Features3
    title="Engineering & Design Support"
    subtitle="Collaborative engineering services optimizing designs for manufacturing excellence"
    tagline="Design Services"
    columns={3}
    items={[
      {
        title: 'Design Review',
        description: 'Comprehensive design analysis for manufacturability optimization and cost reduction opportunities.',
        icon: 'tabler:file-analytics',
      },
      {
        title: 'CAD Services',
        description: 'Professional CAD modeling and drafting services using latest design software and standards.',
        icon: 'tabler:3d-cube-sphere',
      },
      {
        title: 'Process Optimization',
        description: 'Manufacturing process analysis and optimization for improved efficiency and quality.',
        icon: 'tabler:settings',
      },
      {
        title: 'Value Engineering',
        description: 'Cost optimization through material selection, design simplification, and process improvement.',
        icon: 'tabler:trending-down',
      },
      {
        title: 'Simulation Services',
        description: 'FEA analysis and simulation services for structural validation and optimization.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Documentation',
        description: 'Complete technical documentation including drawings, specifications, and quality procedures.',
        icon: 'tabler:file-text',
      },
    ]}
  />

  <!-- Production Process -->
  <Features
    tagline="Production Excellence"
    title="Integrated Manufacturing Process"
    subtitle="Streamlined production workflow ensuring quality and efficiency from concept to delivery"
    items={[
      {
        title: 'Project Planning',
        description: 'Comprehensive project planning with timeline development and resource allocation optimization.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Material Procurement',
        description: 'Strategic material sourcing with certified suppliers ensuring quality and competitive pricing.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Production Execution',
        description: 'Efficient manufacturing execution with real-time monitoring and quality control systems.',
        icon: 'tabler:building-factory-2',
      },
      {
        title: 'Quality Verification',
        description: 'Comprehensive inspection and testing protocols ensuring compliance with specifications.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Discuss Your Project Requirements"
    subtitle="Contact our engineering team to explore how we can deliver the precision components your project demands"
    actions={[
      {
        variant: 'primary',
        text: 'Request Project Quote',
        href: '/contact',
        icon: 'tabler:file-text',
      },
      {
        variant: 'secondary',
        text: 'Technical Consultation',
        href: '/contact',
        icon: 'tabler:users',
      },
    ]}
  />
</Layout>