---
export interface Props {
  title?: string;
  subtitle?: string;
  stats: Array<{
    number: string;
    label: string;
    description?: string;
  }>;
  className?: string;
}

const { title, subtitle, stats, className = '' } = Astro.props;
---

<section class={`py-16 bg-blue-600 text-white ${className}`}>
  <div class="max-w-6xl mx-auto px-4">
    {title && (
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold sm:text-4xl mb-4">
          {title}
        </h2>
        {subtitle && (
          <p class="text-lg text-blue-100 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-4xl font-bold mb-2">{stat.number}</div>
          <div class="text-lg font-semibold mb-1">{stat.label}</div>
          {stat.description && (
            <div class="text-blue-100 text-sm">{stat.description}</div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>