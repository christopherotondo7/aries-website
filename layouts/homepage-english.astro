---
import Layout from '~/layouts/PageLayout.astro';
import VideoHero from '~/components/widgets/VideoHero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Aries - European Manufacturer of High-Precision Metal Components',
  description: 'Custom industrial solutions from laser cutting to final assembly. 65+ years of expertise, €42M turnover, 275 employees across France and Slovakia.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Video Hero Section -->
  <VideoHero
    videoSrc="/video aries.mp4"
    fallbackImage="/images/hero-image.png"
    tagline="European Manufacturing Excellence"
    title="High-Precision Metal Components"
    subtitle="Custom Industrial Solutions - From Laser Cutting to Final Assembly"
    actions={[
      {
        variant: 'primary',
        text: 'Our Services',
        href: '/services',
        icon: 'tabler:arrow-right',
      },
      {
        variant: 'secondary',
        text: 'Request Quote',
        href: '/contact',
        icon: 'tabler:file-text',
      },
    ]}
  />

  <!-- Key Statistics -->
  <Stats
    title="Trusted by Industry Leaders"
    subtitle="65+ years of European manufacturing excellence"
    stats={[
      { amount: '€42M', title: 'Annual Turnover' },
      { amount: '275', title: 'Employees' },
      { amount: '2', title: 'Production Sites' },
      { amount: '65+', title: 'Years Experience' },
    ]}
  />

  <!-- Services Overview -->
  <Features
    id="services"
    tagline="Our Capabilities"
    title="Complete Manufacturing Solutions"
    subtitle="From raw materials to finished assemblies, we deliver precision engineering across the full production cycle"
    items={[
      {
        title: 'High-Precision Laser Cutting',
        description: 'Fiber laser cutting up to 30mm steel thickness with automated systems and XXL cutting tables for maximum efficiency.',
        icon: 'tabler:cut',
      },
      {
        title: 'Multi-Axis CNC Machining',
        description: 'Advanced 5-axis machining centers for complex geometries, turning, milling, drilling and tapping operations.',
        icon: 'tabler:tool',
      },
      {
        title: 'Manual & Robotic Welding',
        description: 'Expert welding services including TIG, MIG/MAG, electrode welding and robotic welding for series production.',
        icon: 'tabler:flame',
      },
      {
        title: 'Assembly & Logistics',
        description: 'Complete mechanical assembly, surface treatment, industrial painting and logistics solutions.',
        icon: 'tabler:package',
      },
    ]}
  />

  <!-- Company Values -->
  <Content
    tagline="Our Values"
    title="Partnership. Innovation. Excellence."
    subtitle="Built on family values since 1956, we combine traditional craftsmanship with cutting-edge technology"
    isReversed
    items={[
      {
        title: 'Innovation',
        description: 'Industry 4.0 integration, digital processes, and continuous investment in advanced technologies.',
      },
      {
        title: 'Quality',
        description: 'ISO 9001, 14001, 3834-2 certifications ensuring the highest standards in every project.',
      },
      {
        title: 'Sustainability',
        description: 'ECOVADIS Bronze Medal recognizing our commitment to environmental and social responsibility.',
      },
      {
        title: 'Partnership',
        description: 'Long-term relationships built on trust, reliability and shared success with our clients.',
      },
    ]}
    image={{
      src: '/images/WhatsApp Image 2024-03-18 at 12.14.28.jpeg',
      alt: 'Aries manufacturing facility',
      inferSize: true,
    }}
  />

  <!-- Market Sectors -->
  <Features2
    tagline="Industries We Serve"
    title="Specialized Solutions Across Key Sectors"
    subtitle="Delivering precision components and assemblies for demanding industrial applications"
    items={[
      {
        title: 'Railway Industry',
        description: 'Chassis, sub-assemblies and certified components meeting EN 15085-2 standards with complete traceability.',
        icon: 'tabler:train',
      },
      {
        title: 'Building & Construction',
        description: 'Metal structures, prefabricated elements, railings, staircases and architectural metalwork.',
        icon: 'tabler:building',
      },
      {
        title: 'General Industry',
        description: 'Custom machinery, equipment manufacturing, spare parts and small to medium production series.',
        icon: 'tabler:settings',
      },
      {
        title: 'Energy & Environment',
        description: 'Wind turbine components, energy equipment and sustainable environmental solutions.',
        icon: 'tabler:wind',
      },
    ]}
  />

  <!-- Technology Highlight -->
  <Content
    tagline="Industry 4.0"
    title="Advanced Manufacturing Technology"
    subtitle="State-of-the-art equipment and digital integration for superior quality and efficiency"
    items={[
      {
        title: 'Automated Production',
        description: 'Fully automated laser cutting systems with material handling and nesting optimization.',
      },
      {
        title: 'Digital Traceability',
        description: 'Complete process tracking from material receipt to final delivery with quality documentation.',
      },
      {
        title: 'Collaborative Robotics',
        description: 'Advanced welding robots working alongside skilled craftsmen for optimal results.',
      },
      {
        title: 'Smart Manufacturing',
        description: 'Integrated CAD/CAM systems, real-time monitoring and predictive maintenance.',
      },
    ]}
    image={{
      src: '/images/robot-welding-1.jpg',
      alt: 'Robotic welding system',
      inferSize: true,
    }}
  />

  <!-- Certifications -->
  <Features
    id="certifications"
    tagline="Quality Assurance"
    title="Certified Excellence"
    subtitle="International certifications and quality standards ensuring reliability and performance"
    items={[
      {
        title: 'ISO 9001:2015',
        description: 'Quality management system certification for consistent, high-quality manufacturing processes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'ISO 14001:2015',
        description: 'Environmental management certification demonstrating our commitment to sustainable operations.',
        icon: 'tabler:leaf',
      },
      {
        title: 'ISO 3834-2',
        description: 'Welding quality certification ensuring the highest standards in all welding operations.',
        icon: 'tabler:flame',
      },
      {
        title: 'ECOVADIS Bronze',
        description: 'CSR performance recognition for environmental, social and ethical business practices.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Ready to Start Your Project?"
    subtitle="Contact our engineering team for custom solutions tailored to your specifications"
    actions={[
      {
        variant: 'primary',
        text: 'Request Quote',
        href: '/contact',
        icon: 'tabler:file-text',
      },
      {
        variant: 'secondary',
        text: 'View Capabilities',
        href: '/services',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>